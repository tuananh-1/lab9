<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/lecture/edit/{{lecture._id}}" method="post">
      <h1 class="text text-primary mt-2 mb-2">Edit lecture</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Full name</label>
         <input class="form-control" type="text" name="full_name" required minlength="3" maxlength="30" value="{{ lecture.full_name }}">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Birth year</label>
         <input class="form-control" type="number" name="birth_year" required min="1900" max="2023" value="{{ lecture.birth_year }}">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Grade</label>
            <input class="form-control" type="text" name="grade" required minlength="3" maxlength="30" value="{{ lecture.grade }}">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Gender</label><br>
            {{#equal lecture.gender "Male"}}
            <input type="radio" name="gender" value="Male" checked> Male
            <input type="radio" name="gender" value="Female"> Female
            {{/equal}}
            {{#equal lecture.gender "Female"}}
            <input type="radio" name="gender" value="Male"> Male
            <input type="radio" name="gender" value="Female" checked> Female
            {{/equal}}
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Email</label>
            <input class="form-control" type="email" name="email" required minlength="3" maxlength="30" value="{{ lecture.email }}">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Image</label><br>
            <img src="{{ lecture.image }}" width="100" height="150">
            <input class="form-control" type="text" name="image" 
            required value="{{ lecture.image }}">
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Edit">
      </div>
   </form>
</div>